{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2021"],
    "jsx": "preserve",
    "baseUrl": "./src",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
